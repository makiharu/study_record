<div class="row">
  <div class="col-xs-6 col-xs-offset-1">
  <h3>devise ディレクトリ　会員の方はこちらからログイン</h3>

    <div class="form-horizontal">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-froup">
          <div class=""
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",placeholder:"Eメールアドレス入力" %>
        </div>

        <div class="form-froup">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control",placeholder:"パスワード入力" %>
          <%= render "devise/shared/links" %>
        </div>

        <!--お引っ越しが必要-->
        <div class="form-froup">
        <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        <% end %>
        </div>
        <!--ここまで-->

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-default btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

